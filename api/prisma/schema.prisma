generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cruises {
  id           Int      @id @default(autoincrement())
  name         String   @unique
  description  String 
  start_date   DateTime
  end_date     DateTime
  status       StatusEnum
  image        String
  updatedAt    DateTime @updatedAt
  bookings      Bookings[]
}

model Users {
  id            Int      @id @default(autoincrement())
  email         String   @unique
  auth_id       String   @unique @default("")
  name          String?  @unique
  mobile_number String?
  age           Int?
  gender        GenderEnum?
  image         String?
  bookings      Bookings[]
}

enum GenderEnum {
  Female
  Male
}

enum StatusEnum {
  Upcoming
  Newly_added 
  Available
}

model Bookings {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      Users    @relation(fields: [user_id], references: [id])
  user_id   Int
  cruise    Cruises  @relation(fields: [cruise_id], references: [id])
  cruise_id Int
}

model Contact {
  id        Int      @id @default(autoincrement())
  user_id   Int
  email     String
  subject   String
  message   String
}